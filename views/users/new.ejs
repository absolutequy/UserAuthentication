<div class="form-data">
    <form action="/users/create" method="POST">
        <label for="txtFirst">First Name</label>
        <input type="text" name="first" id="txtFirst" autofocus required>
        <label for="txtLast">Last Name</label>
        <input type="text" name="last" id="txtLast" required>
        <label for="txtEmail">Email Address</label>
        <input type="email" name="email" id="txtEmail" required>
        <label for="txtZipCode">Zip Code</label>
        <input type="text" name="zipCode" id="txtZipCode" required>
        <label for="txtPassword">Password</label>
        <input type="password" name="password" id="txtPassword" required>
        <button type="submit">Save</button>
    </form>
</div>