<div class="form-data">
    <form action="<%= `/users/${user._id}/update?_method=PUT` %>" method="POST">
        <label for="txtFirst">First Name</label>
        <input type="text" name="name.first" id="txtFirst" autofocus required value="<%=user.name.first%>">
        <label for="txtLast">Last Name</label>
        <input type="text" name="name.last" id="txtLast" autofocus required value="<%=user.name.last%>">
        <label for="txtEmail">Email Address</label>
        <input type="email" name="email" id="txtEmail" required value="<%=user.email%>">
        <label for="txtZipCode">Zip Code</label>
        <input type="text" name="zipCode" id="txtZipCode" required value="<%=user.zipCode%>">
        <button type="submit">Save</button>
    </form>
</div>